{% extends 'base.html.twig' %}
{% block content %}
{% include 'snippets/nav.twig' with {classes:"is-relative"}%}
<div class="modal" id="signupmodal">

  <div class="modal-background"></div>
  <div class="modal-card">
    <div class="modal-card-body">
      <h4 class="title is-3">llena el siguiente <span class="is-blue">formulario</span></h4>
      {{ function('do_shortcode','[contact-form-7 id="' ~ post.form_id ~ '"]')}}
    </div>
    <button class="modal-close is-large close-button" data-modal="signupmodal" aria-label="close"></button>
  </div>
</div>
<section class="section">
  <div class="container">
    <div class="columns is-variable in-desktop is-8">
      <div class="column is-two-thirds">
        <h1 class="subtitle is-2 is-spaced is-blue">{{post.title}}</h1>
        <h3 class="subtitle is-4"><strong>Fechas:</strong>
        </h3>
        <div class="content">
          <ul class="subtitle is-5">
            {% for fecha in post.get_field('dates') %}
            <li>{{date(fecha.start_date)|date("l, d \\d\\e F ")}}, <strong>{{fecha.venue}}</strong></li>
            {% endfor %}
          </ul>
        </div>
        <br>
        {{post.content}}
        <br>
        <div class="columns is-multiline tabber is-variable in-desktop is-6 has-small-padding-top" id="tabscontainer">
          <div class="column is-one-quarter">
            <div class="tabs is-boxed">
              <ul>
                {% for tabi in post.get_field("tabs") %}
                <li class="{{loop.first ? 'is-active' : ''}}" data-tab="tab-{{loop.index}}">
                  <a>
                    <span>{{tabi.title}}</span>
                  </a>
                </li>
                {% endfor %}
              </ul>
            </div>
          </div>
          <div class="column">
            {% for tabi in post.get_field("tabs") %}
              <div id="tab-{{loop.index}}" class="content-tab content is-small {{loop.first ? 'is-active' : ''}} content" >
                {{tabi.content}}
              </div>
              
            {% endfor %}
              
          </div>
        </div>
      </div>
      <div class="column">
        <a href="" class="button is-primary is-fullwidth opener" data-modal="signupmodal">aplica ahora</a>
        <br>
        <div class="columns">
          <div class="column is-full">
            <div class="box">
              <iframe width="560" height="250" src="{{post.video_r}}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
              <p class="content">{{post.content_r}}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
    
{% endblock %}