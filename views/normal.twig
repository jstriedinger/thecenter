    <button class="modal-close is-large close-button" data-modal="formmodal" aria-label="close"></button>
  </div>
</div>
<section class="section bluebg" id="home">
    <div class="container">
      <div class="columns has-text-centered is-multiline">
        <div class="column is-full">
          <h1 class="title is-2">
          	{{post.title}}
          </h1>
        </div>
      </div>
    </div>
</section>
<section id="main" class="section bluebg">
  <div class="container">
    <div class="columns is-variable-in-desktop is-8 is-multiline">
      <div class="column is-full content">
        {{post.content}}
      </div>
     
    </div>
  </div>
</section>
