{% extends 'base.html.twig' %}
{% block content %}
{% include 'snippets/nav.twig' with { classes:"is-relative"} %}
<div class="modal" id="thanksmodal">

  <div class="modal-background"></div>
  <div class="modal-content has-text-centered">
      <h4 class="title is-3">Â¡GRACIAS!</h4>
      <h5 class="subtitle is-5">Muy pronto nos pondremos en contacto contigo.</h5>
      <button class="modal-close is-large close-button" data-modal="thanksmodal" aria-label="close"></button>
  </div>
</div>
<div class="modal" id="formmodal">

  <div class="modal-background"></div>
  <div class="modal-card">
    <div class="modal-card-body">
      <h4 class="title is-3">Llena el siguiente formulario</h4>
      {{ function('do_shortcode','[contact-form-7 id="' ~ post.wp_form_id ~ '"]')}}
